        android:inputType="text"
        android:textColorHint="#EFE8E8"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
