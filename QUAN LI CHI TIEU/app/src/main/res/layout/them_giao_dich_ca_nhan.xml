        android:hint="Tên giao dịch *"
        android:inputType="text"
        android:textColorHint="#EFE8E8"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
