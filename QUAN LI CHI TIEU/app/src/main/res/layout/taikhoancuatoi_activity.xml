<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_create_group">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TẠO NHÓM MỚI"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Nhập mã nhóm -->
    <EditText
        android:id="@+id/et_ma_nhom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mã nhóm *"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <!-- Nhập tên nhóm -->
    <EditText
        android:id="@+id/et_ten_nhom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên nhóm *"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_ma_nhom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <!-- Nhập số tiền ban đầu -->
    <EditText
        android:id="@+id/et_so_tien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số tiền ban đầu *"
        android:inputType="number"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/et_ten_nhom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <!-- Chọn ảnh đại diện -->
    <Button
        android:id="@+id/btn_chon_anh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ảnh đại diện"
        android:background="@drawable/button_bg"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/et_so_tien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="122dp"
        android:layout_height="117dp"
        android:src="@drawable/avt_image"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_chon_anh"
        android:layout_marginStart="144dp"
        android:layout_marginTop="20dp"/>

    <!-- Nút hủy -->

    <!-- Nút lưu -->
    <Button
        android:id="@+id/btn_huy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/button_bg_cancel"
        android:text="HỦY"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/btn_luu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_avatar" />

    <Button
        android:id="@+id/btn_luu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/button_bg"
        android:text="LƯU"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_huy"
        app:layout_constraintTop_toBottomOf="@id/img_avatar" />

</androidx.constraintlayout.widget.ConstraintLayout>
